<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="190"/>
                    <RowDefinition Height="190"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>
                <ImageButton
                Grid.Column="0"
                Grid.Row="0"
                x:Name="One"
                Source="placeholderimg.png"
                WidthRequest="150"
                HeightRequest="180"
                Clicked="OnBtnClicked"
                CommandParameter="One"
                />
            <ImageButton
                 Grid.Column="1"
                 Grid.Row="0"
                 x:Name="Two"
                 Source="placeholderimg.png"
                 WidthRequest="150"
                 HeightRequest="180"
                 Clicked="OnBtnClicked"
                CommandParameter="Two"
                 />
            <ImageButton
                 Grid.Column="2"
                 Grid.Row="0"
                 x:Name="Three"
                 Source="placeholderimg.png"
                 WidthRequest="150"
                 HeightRequest="180"
                 Clicked="OnBtnClicked"
                CommandParameter="Three"
                 />
            <ImageButton
                 Grid.Column="0"
                 Grid.Row="1"
                 x:Name="Four"
                 Source="placeholderimg.png"
                 WidthRequest="150"
                 HeightRequest="180"
                 Clicked="OnBtnClicked"
                CommandParameter="Four"
                 />
            <ImageButton
                 Grid.Column="1"
                 Grid.Row="1"
                 x:Name="Five"
                 Source="placeholderimg.png"
                 WidthRequest="150"
                 HeightRequest="180"
                 Clicked="OnBtnClicked"
                CommandParameter="Five"
                 />
                <ImageButton
                 Grid.Column="2"
                 Grid.Row="1"
                 x:Name="Six"
                 Source="placeholderimg.png"
                 WidthRequest="150"
                 HeightRequest="180"
                 Clicked="OnBtnClicked"
                 CommandParameter="Six"
                 />
            </Grid>
            <Label
                FontSize="100"
                FontAttributes="Bold"
                x:Name="Victory"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
